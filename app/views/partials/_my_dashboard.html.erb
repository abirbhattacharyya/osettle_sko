<% content_tag :div, :class => "fixed-side-ctrls" do %>
    <% content_tag :ul do %>
        <%= content_tag(:li, content_tag(:span, link_to("Notifications", notifications_path, :class => "w160px"), :class => "button green ".concat(([notifications_path, root_path].include? request.path) ? "current" : ""))) %>
        <%= content_tag(:li, content_tag(:span, link_to("Upload Data", upload_option_path, :class => "w160px"), :class => "button green ".concat(([upload_option_path].include? request.path) ? "current" : ""))) %>
        <%= content_tag(:li, content_tag(:span, link_to("View Data", view_data_path, :class => "w160px"), :class => "button green ".concat(([feeds_path].include? request.path) ? "current" : ""))) %>
        <%= content_tag(:li, content_tag(:span, link_to("Analytics", analytics_path, :class => "w160px"), :class => "button green ".concat(([analytics_path].include? request.path) ? "current" : ""))) %>
        <%= content_tag(:li, content_tag(:span, link_to("Reports", reports_path, :class => "w160px"), :class => "button green ".concat(([reports_path].include? request.path) ? "current" : ""))) %>
    <% end %>
<% end %>